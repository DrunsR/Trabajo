@model List<Restaurante>


    <main role="main">

      <section class="jumbotron text-center">
        <div class="container">
          <h1 class="jumbotron-heading">Restaurantes</h1>
          <p class="lead text-muted">Elige tus alimentos ..............con EasyToEat</p>
          
        </div>
      </section>

      <div class="album py-5 bg-light">
        <div class="container">

          <div class="row">

@foreach (var res in Model)
{
    

            <div class="col-md-4">
              <div class="card mb-4 shadow-sm">
                <img class="card-img-top" src="@res.foto" height="350" alt="Card image cap">
                <div class="card-body">
                  <p class="card-text">@res.nombreTienda @res.descripcion</p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <form asp-action="menus" method="post" role="form">
                        <input type="text" name="Id" id="Id "value="@res.Id" style="display: none">
                        <input type="submit" name="register" id="register" tabindex="4" style="display:block" class="btn btn-sm btn-outline-secondary" value="Menu">
                      </form>
                      
                    </div>
                    <small class="text-muted">5 opiniones</small>
                  </div>
                </div>
              </div>
            </div>
            
   
}
          </div>
        </div>
      </div>

    </main>