
	
<div class="container text-center" >
	<h1>Inicia sesion o registrate como cliente</h1>
    	<div class="row">
			
			<div class="col-md-6 col-md-offset-3" style="margin:0 auto">
				<div class="panel panel-login">
					<div class="panel-heading">
						<div class="row">
							<div class="col-6">
								<a href="InicioSesion" type="button" class="btn btn-primary">Iniciar sesión</a>
							</div>
							<div class="col-xs-6">
								<a href="RegistroRestaurante" type="button" class="btn btn-primary">Regístrate ahora</a>
							</div>
						</div>
						<hr>
					</div>
					<div class="panel-body">
						<div class="row">
							<div class="col-lg-12">
								
								<form id="register" action="~/Client/RegistroRestaurante" method="post" role="form">
									
										@Html.ValidationSummary()
									
									<div class="form-group">
										<input type="text" name="Ini.NombreUsuario" id="username" tabindex="1" class="form-control" placeholder="Usuario" value="">
									</div>
									<div class="form-group">
										<input type="text" name="nombre" id="nombre" tabindex="1" class="form-control" placeholder="Nombres" value="">
									</div>
									<div class="form-group">
										<input type="text" name="apellido" id="apellido" tabindex="1" class="form-control" placeholder="Apellidos" value="">
									</div>
									
									<div class="form-group">
										<input type="email" name="email" id="email" tabindex="1" class="form-control" placeholder="Correo electronico" value="">
									</div>
									<div class="form-group">
										<input type="text" name="telefono" id="telefono" tabindex="1" class="form-control" placeholder="Apellidos" value="">
									</div>
									<div class="form-group">
										<input type="text" name="direccion" id="direccion" tabindex="1" class="form-control" placeholder="Ubicacion del restaurante" value="">
									</div>
									<div class="form-group">
										<input type="text" name="RUC" id="RUC" tabindex="1" class="form-control" placeholder="RUC" value="">
									</div>
									<div class="form-group">
										<input type="password" name="Ini.Contraseña" id="password" tabindex="2" class="form-control" placeholder="Contraseña">
									</div>
									<div class="form-group">
										<input type="password" name="confirm_password" id="confirm_password" tabindex="2" class="form-control" placeholder="Confirmar contraseña">
									</div>
									<div class="form-group">
										<input type="text" name="foto" id="foto" tabindex="3" class="form-control" placeholder="Foto de Restaurante">
									</div>
									<div class="form-group">
										<div class="row">
											<div class="col-sm-6 col-sm-offset-3">
												<input type="submit" name="register-submit" id="register-submit" tabindex="4" class="form-control btn btn-dark" value="Crear cuenta">
											</div>
										</div>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
