
	
<div class="container" >
	<h1 class="text-center">Inicia sesion o registrate como cliente</h1>
    	<div class="row">
			
			<div class="col-md-8 col-md-offset-2" style="margin:0 auto">
				<div class="panel panel-login">
					<div class="panel-heading">
						<div class="row text-center">
							<div class="col-md-6">
								<a href="InicioSesion" type="button" class="btn btn-primary">Iniciar sesión</a>
							</div>
							<div class="col-md-6">
								<a href="RegistroRestaurante" type="button" class="btn btn-primary">Regístrate ahora</a>
							</div>
						</div>
						<hr>
					</div>
					<div class="panel-body">
						<div class="row">
							<div class="col-xl-12">
								
								<form id="register" action="~/Client/RegistroRestaurante" method="post" role="form">
									
										@Html.ValidationSummary()
									<div class="form-group row">
                                        <label for="nombre" class="col-sm-4 col-form-label">Nombre :</label>
                                        <div class="col-sm-8">
                                            <input type="text" name="nombre" id="nombre" tabindex="1" class="form-control" placeholder="Nombre del Propietario" value="">
                                        </div>
										
									</div>
                                     <div class="form-group row">
                                        <label for="apellido" class="col-sm-4 col-form-label">Apellido :</label>
                                        <div class="col-sm-8">
                                            <input type="text" name="apellido" id="apellido" tabindex="1" class="form-control" placeholder="Apellido del Propietario" value="">
                                        </div>
                                    </div>
                                     <div class="form-group row">
										<label for="Ini.Usuario" class="col-sm-4 col-form-label">Usuario :</label>
                                        <div class="col-sm-8">
                                            <input type="text" name="Usuario" id="Usuario" tabindex="1" class="form-control" placeholder="Usuario" value="">
                                        </div>
									</div>
									<div class="form-group row">
										<label for="email" class="col-sm-4 col-form-label">Email :</label>
                                        <div class="col-sm-8">
                                            <input type="email" name="email" id="email" tabindex="1" class="form-control" placeholder="Email" value="">
                                        </div>
									</div>
                                    <div class="form-group row">
										<label for="telefono" class="col-sm-4 col-form-label">Telefono :</label>
                                        <div class="col-sm-8">
                                            <input type="text" name="telefono" id="telefono" tabindex="1" class="form-control" placeholder="Telefono" value="">
                                        </div>
									</div>
                                    <div class="form-group row">
										<label for="nomnbreTienda" class="col-sm-4 col-form-label">Nomb del Restaurant :</label>
                                        <div class="col-sm-8">
                                            <input type="text" name="nombreTienda" id="nombreTienda" tabindex="1" class="form-control" placeholder="Nombre de Restaurante" value="">
                                        </div>
									</div>
                                    <div class="form-group row">
                                        <label for="foto" class="col-sm-4 col-form-label">Imagen Referencial :</label>
                                        <div class="col-sm-8">
                                        <input type="file" class="form-control-file" id="foto">
                                        </div>
                                    </div>
                                    <div class="form-group row">
										<label for="direccion" class="col-sm-4 col-form-label">Direccion :</label>
                                        <div class="col-sm-8">
                                            <input type="text" name="direccion" id="direccion" tabindex="1" class="form-control" placeholder="Direccion" value="">
                                        </div>
									</div>
                                    <div class="form-group row">
										<label for="RUC" class="col-sm-4 col-form-label">RUC :</label>
                                        <div class="col-sm-8">
                                            <input type="text" name="RUC" id="RUC" tabindex="1" class="form-control" placeholder="RUC" value="">
                                        </div>
									</div>
                                    <div class="form-group row">
                                        <label for="descripcion" class="col-sm-4 col-form-label">Descripcion :</label>
                                        <div class="col-sm-8">
                                             <textarea class="form-control" name="descripcion" id="descripcion" rows="3" placeholder="Descripcion" value=""></textarea>
                                        </div>
                                       
                                     </div>
									<div class="form-group row">
										<label for="Ini.Contraseña" class="col-sm-4	 col-form-label">Contraseña:</label>
                                        <div class="col-sm-8">
                                            <input type="password" name="Ini.Contraseña" id="Ini.Contraseña" tabindex="1" class="form-control" placeholder="Contraseña" value="">
                                        </div>
									</div>
									<div class="form-group row">
										<label for="confirm_password" class="col-sm-4 col-form-label">Confirmar Contraseña :</label>
                                        <div class="col-sm-8">
                                            <input type="password" name="confirm_password" id="confirm_password" tabindex="1" class="form-control" placeholder="Confirme contraseña" value="">
                                        </div>
									</div>
									<div class="form-group">
										<div class="text-center">
											<div class="col-md-6 col-md-offset-3" style="margin:0 auto">
												<input type="submit" name="register-submit" id="register-submit" tabindex="4" class="form-control btn btn-primary" value="Crear cuenta">
											</div>
										</div>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
