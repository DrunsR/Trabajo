<head>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script>
$(document).ready(function(){
    $("#login-form-link").click(function(){
		$("#login").show();
        $("#register").hide();
    });
    $("#register-form-link").click(function(){
        $("#register").show();
		$("#login").hide();
    });
});
</script>
</head>
<body>

<div class="container text-center" >
  <h1>Inicia sesion o registra tu propio restaurante</h1>
    	<div class="row" >
			<div class="col-6 col-md-offset-3" style="margin:0 auto">
				<div class="panel panel-login"> 
					<div class="panel-heading">
						<div class="row">
							<div class="col-6">
								<button id="login-form-link" class="btn btn-primary">Iniciar sesión</button>
							</div>
							<div class="col-xs-6">
								<button id="register-form-link" class="btn btn-primary">Regístrate ahora</button>
							</div>
						</div>
						<hr>
					</div>
					<div class="panel-body">
						<div class="row">
							<div class="col-lg-12">
								<form id="login" action="~/Client/InicioRestaurant" method="post" role="form" style="display: block;">
									<div class="form-group">
										<input type="text" name="username" id="username" tabindex="1" class="form-control" placeholder="Usuario" value="">
									</div>
									<div class="form-group">
										<input type="password" name="password" id="password" tabindex="2" class="form-control" placeholder="Contraseña">
									</div>
									<div class="form-group text-center">
										<input type="checkbox" tabindex="3" class="" name="remember" id="remember">
										<label for="remember"> Recordarme</label>
									</div>
									<div class="form-group">
										<div class="row">
											<div class="col-sm-6 col-sm-offset-3">
												<input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-login" value="Iniciar sesión">
											</div>
										</div>
									</div>
								</form>
								<form id="register" action="~/Client/InicioRestaurant" method="post" role="form" style="display: none;">
									<div class="form-group">
										<input type="text" name="name" id="name" tabindex="1" class="form-control" placeholder="Nombre del Propietario" value="">
									</div>
                  <div class="form-group">
										<input type="text" name="apellido" id="apellido" tabindex="1" class="form-control" placeholder="Apellido del Propietario" value="">
									</div>
                  <div class="form-group">
										<input type="text" name="username" id="username" tabindex="1" class="form-control" placeholder="Usuario" value="">
									</div>
									<div class="form-group">
										<input type="email" name="email" id="email" tabindex="1" class="form-control" placeholder="Correo electronico" value="">
									</div>
                  <div class="form-group">
										<input type="text" name="telefono" id="telefono" tabindex="1" class="form-control" placeholder="Telefono" value="">
									</div>
                  <div class="form-group">
										<input type="text" name="direccion" id="direccion" tabindex="1" class="form-control" placeholder="Direccion" value="">
									</div>
                  <div class="form-group">
										<input type="text" name="RUC" id="RUC" tabindex="1" class="form-control" placeholder="RUC" value="">
									</div>
                  <div class="form-group">
										<input type="text-area" name="descripcion" id="descripcion" tabindex="1" class="form-control" placeholder="Descripcion" value="">
									</div>
									<div class="form-group">
										<input type="password" name="password" id="password" tabindex="2" class="form-control" placeholder="Contraseña">
									</div>
									<div class="form-group">
										<input type="password" name="confirm-password" id="confirm-password" tabindex="2" class="form-control" placeholder="Confirmar contraseña">
									</div>
									<div class="form-group">
										<div class="row">
											<div class="col-sm-6 col-sm-offset-3">
												<input type="submit" name="register-submit" id="register-submit" tabindex="4" class="form-control btn btn-register" value="Crear cuenta">
											</div>
										</div>
									</div>
								</form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
    </body>