

	
<div class="container" >
	<h1 class="text-center">Inicia sesion o registrate como cliente</h1>
    	<div class="row">
			
			<div class="col-md-8 col-md-offset-2" style="margin:0 auto">
				<div class="panel panel-login">
					<div class="panel-heading">
						<div class="row text-center">
							<div class="col-md-6">
								<a href="InicioSesion" type="button" class="btn btn-primary">Iniciar sesión</a>
							</div>
							<div class="col-md-6">
								<a href="RegistroRestaurante" type="button" class="btn btn-primary">Regístrate ahora</a>
							</div>
						</div>
						<hr>
					</div>
					<div class="panel-body">
						<div class="row">
							<div class="col-lg-12">
								<form id="login" action="~/Client/InicioSesion" method="post" role="form" style="display: block;">
									@Html.ValidationSummary()
									<div class="form-group row">
										<label for="Usuario" class="col-sm-4 col-form-label">Usuario :</label>
                                        <div class="col-sm-8">
                                            <input type="text" name="usuario" id="usuario" tabindex="1" class="form-control" placeholder="Usuario" value="">
                                        </div>
									</div><div class="form-group row">
										<label for="Contraseña" class="col-sm-4 col-form-label">Contraseña:</label>
                                        <div class="col-sm-8">
                                            <input type="password" name="Contraseña" id="Contraseña" tabindex="1" class="form-control" placeholder="Contraseña" value="">
                                        </div>
									</div>

									<div class="form-group text-center">
										<input type="checkbox" tabindex="3" class="" name="remember" id="remember">
										<label for="remember"> Recordarme</label>
									</div>
									<div class="form-group">
										<div class="text-center">
											<div class="col-sm-6 col-sm-offset-3" style="margin:0 auto">
												<input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-primary" value="Iniciar sesión">
											</div>
										</div>
									</div>
									
								</form>
								
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>	