

	
<div class="container text-center" >
	<h1>Inicia sesion o registrate como cliente</h1>
    	<div class="row">
			
			<div class="col-md-6 col-md-offset-3" style="margin:0 auto">
				<div class="panel panel-login">
					<div class="panel-heading">
						<div class="row">
							<div class="col-6">
								<a href="InicioSesion" type="button" class="btn btn-primary">Iniciar sesión</a>
							</div>
							<div class="col-xs-6">
								<a href="RegistroRestaurante" type="button" class="btn btn-primary">Regístrate ahora</a>
							</div>
						</div>
						<hr>
					</div>
					<div class="panel-body">
						<div class="row">
							<div class="col-lg-12">
								<form id="login" action="~/Client/InicioSesion" method="post" role="form" style="display: block;">
									@Html.ValidationSummary()
									<div class="form-group">
										<input type="text" name="username" id="username" tabindex="1" class="form-control" placeholder="Usuario" value="">
									</div>
									<div class="form-group">
										<input type="password" name="password" id="password" tabindex="2" class="form-control" placeholder="Contraseña">
									</div>
									<div class="form-group text-center">
										<input type="checkbox" tabindex="3" class="" name="remember" id="remember">
										<label for="remember"> Recordarme</label>
									</div>
									<div class="form-group">
										<div class="row">
											<div class="col-sm-6 col-sm-offset-3">
												<input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-dark" value="Iniciar sesión">
											</div>
										</div>
									</div>
									
								</form>
								
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>	